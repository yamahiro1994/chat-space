.main-chat
  .main-chat__header
    .main-chat__header__left
      .main-chat__header__left-name
        = @group.name
      .main-chat__header__left-member
        - @group.users.each do |user|
          = user.name
    .main-chat__header__edit-btn
      = link_to edit_group_path(current_user), class: "contents__btn" do
        = "Edit"
  
  
  .main-chat__chat-list
    = render @messages
  
  
  .chat-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do 
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'