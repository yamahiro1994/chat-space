.main-chat__chat-list__info-box
  .main-chat__chat-list__info
    .main-chat__chat-list__info-data
      = message.user.name
    .main-chat__chat-list__daytime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__chat-list__comment
    - if message.content.present?
      .main-chat__chat-list__text
        = message.content
    = image_tag message.image.url, class: 'main-chat__chat-list__text' if message.image.present?